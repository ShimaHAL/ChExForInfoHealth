{
    "manifest_version": 3,
    "version": "1.0.0",
    "name": "Information Health Viewer",
    "description": "an extension for visualizing your information health data",
    "icons": {
        "128": "icons/newspaper-solid.png"
    },
    "permissions": [
        "tabs",
        "background",
        "storage",
        "alarms"
    ],
    "host_permissions":[
        "https://ja.wikipedia.org/",
        "http://127.0.0.1:8000/"
    ],
    "content_scripts": [{
        "matches":
            [
                "https://news.yahoo.co.jp/*"
            ],
        "js": [
            "js/jquery-3.6.0.min.js",
            "js/content.js"
        ]
    }],
    "background": {
        "matches": ["https://news.yahoo.co.jp/*"],
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": "icons/newspaper-solid.png",
        "default_title": "InfoHealthViewer",
        "default_popup": "popup.html"
    }
}
